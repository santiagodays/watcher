</div>

    <div id="content" class="site-content">
        <article>
            <div class="content-1330 center-relative">
                <div class="clear"></div>
                <p>&nbsp;</p>
                <p>&nbsp;</p>
                <div class="blog-holder block center-relative content-1330" style="margin-top: 50px;">
                  <div class="container text-center" style="margin-bottom: 50px;">
                    <p style="color: green"><%= notice %></p>

                    <h1>Posts</h1>

                    <div id="posts">
                      <% @posts.each do |post| %>
                        <h3><%= link_to post.title, post %></h3>
                      <% end %>
                    </div>

                    <%= link_to "New post", new_post_path, class: "btn btn-primary mt-4" %>
                  </div>
                  <div class="post-border center-relative block"></div>
                </div>
                <p>&nbsp;</p>
                <p>&nbsp;</p>
                <div class="clear"></div>
            </div>
        </article>
