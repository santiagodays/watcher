<div class="post-border center-relative block"></div>
  <% Post.all.each do |post| %>
    <article class="relative blog-item-holder center-relative">
      <div class="cat-links">
        <ul>
          <li>
            <a href="#"><%= post.category %></a>
          </li>
        </ul>
      </div>
      <div class="entry-date published"><%= post.created_at.strftime("%m/%d") %></div>
      <div class="author vcard" style="margin-right:30px"><%= post.user.username %></div>
      <h2 class="entry-title">
        <a href="<%= post_path(post) %>"><%= post.title %></a>
      </h2>
      <div class="clear"></div>
    </article>
  <% end %>
